<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Dolphy_AI.welcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dolphy_AI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="welcome">
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>
    <Grid Padding="20">
        <StackPanel>
            <StackPanel HorizontalAlignment="Left" Translation="0,0,32" CornerRadius="24" Padding="20" Width="700" Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
                <StackPanel.Shadow>
                    <ThemeShadow/>
                </StackPanel.Shadow>
                
                <TextBlock Text="🐬 Dolphy AI" FontSize="32" FontFamily="{StaticResource ginto}" FontWeight="Bold" Margin="0,0,0,20"/>
                <TextBlock x:Name="welcomedolphy" Text="Your privacy-first productivity companion" FontFamily="{StaticResource CustomFont1}" FontSize="16" FontWeight="Bold" Margin="10,0,0,5"/>
            </StackPanel>


            <ItemsControl>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid Orientation="Horizontal" ItemWidth="450" ItemHeight="200" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <!-- Feature Tile: Summarizer -->
                <Button Background="#E0F7FA"
        CornerRadius="20"
        Margin="10"
        Click="Button_Click"
        Width="380"
        Height="140"
                        Translation="0,0,32"
        Padding="10">
                    <Button.Shadow>
                        <ThemeShadow/>
                    </Button.Shadow>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="🗨️ Chat"
                   FontSize="62"
                   FontWeight="SemiBold"
                                   FontFamily="{StaticResource CustomFont}"
                   HorizontalAlignment="Center" />
                        <TextBlock Text="Talk to Dolphy AI."
                                   FontFamily="{StaticResource CustomFont}"
                   FontStyle="Italic"
                   FontSize="24"
                   TextAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button Background="#E0F7FA"
        CornerRadius="20"
        Margin="10"
        Click="Button_Click"
        Width="380"
        Height="140"
                        Translation="0,0,32"
        Padding="10">
                    <Button.Shadow>
                        <ThemeShadow/>
                    </Button.Shadow>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="🈸 Translate"
                   FontSize="60"
                   FontWeight="SemiBold"
                                   FontFamily="{StaticResource CustomFont}"
                   HorizontalAlignment="Center" />
                        <TextBlock Text="Translate, anywhere, everywhere."
                                   FontFamily="{StaticResource CustomFont}"
                   FontStyle="Italic"
                   FontSize="24"
                   TextAlignment="Center" />
                    </StackPanel>
                </Button>
                <!-- Feature Tile: File Cleaner -->

                <!-- Add more tiles as needed -->

            </ItemsControl>
        </StackPanel>
    </Grid>


</Window>
